@using Web.Helpers.ExtensionMethods
<div id="standard-menu">
    <ul>
        <li>@Html.ActionLink("HOME", "Index", "Home")</li>
        <li>@Html.ActionLink("My games", "Summary", "Game")</li>
        <li>@Html.ActionLink("Schedule new game", "Activity", "Game")</li>
        <li>@Html.ActionLink("Account", "Summary", "Account")</li>
        <li><a href="http://wwww.tennesseesoccerclub.org" target="_blank">Club website</a></li>
    </ul>
</div>    
@if(Html.IsTrue("show-admin"))
{
    <div id="admin-menu">
        <span id="admin-menu-header">Manage:</span>
        <ul>
            <li>@Html.ActionLink("Users", "Index", "User")</li>
            <li>@Html.ActionLink("TSC teams", "Index", "ClubTeam")</li>
            <li>@Html.ActionLink("Clubs", "Index", "Club")</li>
            <li>@Html.ActionLink("Fields", "Index", "Field")</li>
            <li>@Html.ActionLink("Slots", "Index", "Slot")</li>
            <li>@Html.ActionLink("System settings", "Index", "Setting")</li>
        </ul>
    </div>
}


    
<script type="text/javascript">
    $("#left-menu li").click(function (e) {
        var $target = $(e.target);
        if (!$target.is("li")) { return; }

        var launch = $('a', this);
        if (launch.size() > 0) {
            eval(launch[0].click());
        }
        //source: http://stackoverflow.com/questions/910850/jquery-assign-onclick-for-li-from-a-link
    });
</script>