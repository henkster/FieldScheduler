@using Web.Helpers.ExtensionMethods
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Scheduler</title>
    <link href="@Url.Content("~/Content/main.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/scheduler.styling.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/scheduler.sugar.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <span id="title-name">@Html.ActionLink("Field Scheduler", "Index", "Home")</span>
                <div id="logindisplay">
                    @Html.Partial("_LogOnPartial")
                </div>
                <div id="mode">
                    @Html.Partial("_Mode")
                </div>
                <div id="club-logo">@Html.ImageLink("tsc_scheduler.png", "Index", "Home", null, null, "club logo", null)</div>
            </div>
@*            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </nav>*@
        </header>
        <section id="main">
            <div>
                @Html.ValidationSummary()
            </div>
            <div id="temp-message">
                @TempData["message"]
            </div>
            @RenderBody()
        </section>
        <footer>
             &copy;@DateTime.Now.Year Developed by <a href="http://www.twitter.com/henkster" target="_blank">Steve Henke</a>.  Hosted by <a href="#" target="_blank">OI</a>.
        </footer>
    </div>
</body>
</html>
