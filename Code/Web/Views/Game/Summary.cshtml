@using Web.Helpers.ExtensionMethods
@using Web.Models
@model IEnumerable<GameViewModel>

@{
    ViewBag.Title = "My Games";
}

<h2>My Games</h2>

<table>
    <tr>
        <th></th>
        <th>Date</th>
        <th>Field</th>
        <th>Time</th>
        <th>Playing</th>
        <th>Activity</th>
        <th>Team&nbsp;1</th>
        <th>Team&nbsp;2</th>
        <th>Age</th>
        <th>Schedule By</th>
        <th>Ref Needed</th>
        <th>Ref Confirmed</th>
    </tr>
    @foreach (GameViewModel game in Model)
    {
        <tr>
            <td>@Html.ImageLink("deleteRedX.jpg", "Delete", "Game", new {id = game.Id})</td>
            <td>@game.FormattedDate</td>
            <td>@game.Field</td>
            <td>@game.FormattedTime</td>
            <td>@game.Size</td>
            <td>@game.Activity</td>
            <td>@game.Team1Name</td>
            <td>@game.Team2Name</td>
            <td>@game.Age</td>
            <td>@game.ScheduledByName</td>
            <td><img src="@Url.Content(string.Format("~/Images/{0}", game.AreRefereesNeeded ? "refyes.jpg" : "refno.jpg"))" /></td>
            <td><img src="@Url.Content(string.Format("~/Images/{0}", game.AreRefereesConfirmed ? "refyes.jpg" : "refno.jpg"))" /></td>
        </tr>
    }
</table>