@model Web.Models.GameScheduleModels.GameEditViewModel

@{
    ViewBag.Title = "Game Edit";
}

<h2>Game Edit</h2>

@using(Html.BeginForm())
{
    <ul>
        <li>Game type: @Model.Activity</li>
        <li>Field size: @Model.Size</li>
        <li>Date: @Model.DateFormatted</li>
        <li>Description: @Model.Description</li>
        <li>@Html.DropDownListFor(m => m.Team1Division, Model.Team1IdDivisionList, new { onchange = "GetTeams1()"}) @Html.DropDownListFor(m => m.Team1, Model.Team1IdList) @Html.ActionLink("Add new", "Create", "ExternalTeam", new {Model.Activity, Model.Size, Model.Date, Model.SlotId}, null)</li>
        <li>@Html.DropDownListFor(m => m.Team2Division, Model.Team2IdDivisionList, new { onchange = "GetTeams2()"}) @Html.DropDownListFor(m => m.Team2, Model.Team2IdList) @Html.ActionLink("Add new", "Create", "ExternalTeam", new {Model.Activity, Model.Size, Model.Date, Model.SlotId}, null)</li>
        <li>@Html.TextAreaFor(m => m.Notes, new { style = "width: 600px" })</li>
    </ul>
    <input type="submit" value="Schedule" />
}