@using Domain
@model Web.Models.SlotCreateViewModel

@{
    ViewBag.Title = string.Format("Add Available Slots - {0}", Model.FieldDescription);
}

<h2>Add Available Slots - @Model.FieldDescription</h2>

@using(Html.BeginForm())
{
    @Html.HiddenFor(m => m.FieldId)
    @Html.HiddenFor(m => m.FieldDescription)
    <ul>
        <li>Day of Week: @Html.DropDownListFor(m => m.DayOfWeek, new SelectList(Enum.GetValues(typeof(DayOfWeek))))</li>
        <li>Start Date: @Html.EditorFor(m => m.StartDate)</li>
        <li>End Date: @Html.EditorFor(m => m.EndDate)</li>
        <li>Start Time: @Html.EditorFor(m => m.StartTime)</li>
        <li>End Time: @Html.EditorFor(m => m.EndTime)</li>
        <li>Minutes per Slot: @Html.DropDownListFor(m => m.MinutesPerSlot, Model.MinutesList)</li>
        <li>@Html.CheckBoxFor(m => m.AllowFriendlies) @Html.LabelFor(m => m.AllowFriendlies)</li>
        <li>@Html.CheckBoxFor(m => m.AllowStateLeague) @Html.LabelFor(m => m.AllowStateLeague)</li>
        <li>@Html.CheckBoxFor(m => m.AllowTraining) @Html.LabelFor(m => m.AllowTraining)</li>
    </ul>
    <input type="submit" value="Create" />
}