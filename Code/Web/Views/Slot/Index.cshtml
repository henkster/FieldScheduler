@using Web.Models
@model IEnumerable<SlotViewModel>

@{
    ViewBag.Title = "Slots";
}

<h2>Slots</h2>

<table>
    <tr>
        <th>Location</th>
        <th>Date</th>
        <th>Day of Week</th>
        <th>Start</th>
        <th>End</th>
        <th>Allowed Activities</th>
        <th></th>
    </tr>
    @foreach (SlotViewModel slot in Model)
    {
        <tr>
            <td>@slot.Location</td>
            <td>@slot.Date</td>
            <td>@slot.DayOfWeek</td>
            <td>@slot.StartTime</td>
            <td>@slot.EndTime</td>
            <td>@slot.AllowedActivitiesFormatted</td>
            <td>
                @if (slot.CanBeDeleted)
                {
                    @Html.ActionLink("Delete", "Delete", "Slot", new {slot.Id}, new {onclick = "return confirm('Are you sure?');"})
                }
                else
                {
                    <span>slot.GameScheduledBy</span>
                }
            </td>
        </tr>
    }
</table>
@Html.ActionLink("Add Slots", "Create", "Slot")